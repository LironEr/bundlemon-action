{
  "name": "bundlemon-action",
  "version": "1.2.0",
  "private": true,
  "description": "BundleMon GitHub action",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -b",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "rimraf dist/ && ncc build src/main.ts --source-map --license licenses.txt",
    "test": "jest",
    "all": "yarn build && yarn package && yarn format && yarn lint && yarn test",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LironEr/bundlemon-action.git"
  },
  "keywords": [
    "actions"
  ],
  "author": "LironEr",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20",
    "@typescript-eslint/parser": "^6.18.1",
    "@vercel/ncc": "^0.38.1",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.2.0",
    "semantic-release": "^23.0.8",
    "semantic-release-major-tag": "^0.3.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
